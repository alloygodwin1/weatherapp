<html>
<head>
<title>Weather App</title>
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
* {
  box-sizing: border-box;
}
html {
  background: #ddd;
}
.over{
   z-index:10;
   position:absolute;
   margin-left:25%;
}
.widget {
  width: 688px;
  height: 30vw;
  margin: 50px auto;
  padding: 20px;
  font-family: helvetica, arial, sans-serif;
  font-size: 14px;
  color: #eee;
  background: #1e5799;
  background: -webkit-linear-gradient(top, #1e5799 0%,#2989d8 49%,#207cca 50%,#7db9e8 100%);
  border-bottom: 2px solid #1e5799;
  border-left: 1px solid #207cca;
  border-right: 1px solid #207cca;
  border-radius: 20px;
  box-shadow: 0 0 8px -1px #555;
  text-shadow: 1px 1px 5px #194372;
}
.date, .weather {
  width:50%; 
  float: left;
  text-align: center;
  min-height: 80px;
}
.date {
  border-right: 1px solid #1e5799;
  padding-right: 6%
}
.weather {
  padding: 60px 0 0 6%;
  border-left: 1px solid #7db9e8;
  background: url(https://79webdesign.co.uk/play/weatherSprite.png)140px 0 no-repeat;
}
#day {
  font-size: 16vw;
  display: block;
  margin: -10px 0 -12px 0;
}
#month{
  font-size: 4vw;
}
</style>
</head>
<body>
<div class="over">
        <form action="/" method="post">
          <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
          <input type="submit" class="ghost-button" value="Get Weather">
        </form>
<div class="widget">
  <div class="date">
    <span id="day"></span>
    <span id="month"></span>
  </div>
  <div class="weather">
    <span><b>Weather Details</b></span>
            <% if(weather !== null){ %>
          <p><%= weather %></p>
        <% } %>

        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>
  </div>
</div>
</div>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
   
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>


    <div class="carousel-inner">
      <div class="item active">
        <img src="1.jpg" alt="Los Angeles" style="width:100%;height:100%">
      </div>

      <div class="item">
        <img src="2.jpg" alt="Chicago" style="width:100%;height:100%">
      </div>
    
      <div class="item">
        <img src="3.webp" alt="New york" style="width:100%;height:100%">
      </div>
    </div>


    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</body>
<script>
var months = ['January','February','March','April','May','June','July','August','September','October','November','December'];       
var today = new Date();
today.setTime(today.getTime());       
document.getElementById("day").innerHTML = today.getDate();
document.getElementById("month").innerHTML = months[today.getMonth()];
</script>
</html>